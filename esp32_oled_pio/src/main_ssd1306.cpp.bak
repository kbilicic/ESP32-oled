#include <Arduino.h>
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

// WiFi Kit 32 built-in OLED pins
#define OLED_SDA  4
#define OLED_SCL 15
#define OLED_RST 16

// Screen dimensions
#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64

// Create display object (I2C, not SPI!)
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RST);

void setup() {
  Serial.begin(115200);
  delay(1000);
  Serial.println("\n\n=== SSD1306 OLED Test for WiFi Kit 32 ===");
  
  // Initialize I2C
  Wire.begin(OLED_SDA, OLED_SCL);
  Serial.println("I2C initialized on SDA=4, SCL=15");
  
  // Initialize display with I2C address 0x3C
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println("SSD1306 allocation failed!");
    // Try alternate address
    if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3D)) {
      Serial.println("SSD1306 not found on 0x3C or 0x3D");
      while(1);
    } else {
      Serial.println("SSD1306 found at 0x3D");
    }
  } else {
    Serial.println("SSD1306 found at 0x3C - SUCCESS!");
  }
  
  // Clear display
  display.clearDisplay();
  display.display();
  delay(500);
  
  // Test pattern
  display.setTextSize(2);
  display.setTextColor(SSD1306_WHITE);
  display.setCursor(0, 0);
  display.println("WiFi");
  display.println("Kit 32");
  display.setTextSize(1);
  display.println();
  display.println("SSD1306 OLED");
  display.println("Display OK!");
  display.display();
  
  Serial.println("Display initialized and text shown!");
}

void loop() {
  static int counter = 0;
  
  delay(1000);
  
  // Update counter
  display.fillRect(0, 56, 128, 8, SSD1306_BLACK);
  display.setCursor(0, 56);
  display.setTextSize(1);
  display.print("Count: ");
  display.print(counter++);
  display.display();
  
  Serial.print("Counter: ");
  Serial.println(counter);
}
